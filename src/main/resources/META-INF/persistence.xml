<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="de.shhcm.model"><!-- The package name for the annotated classes goes here. -->
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <class>de.shhcm.model.Event</class> <!--Comment? -->
      <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        <property name="connection.datasource" value="java:comp/env/myDataSource"/> <!-- Tell hibernate where to find a datasource via JNDI -->
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>
        <property name="hbm2ddl.auto" value="create"/>
      </properties>
    </persistence-unit>
</persistence>