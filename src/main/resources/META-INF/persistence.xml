<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="de.shhcm.model"><!-- The package name for the annotated classes goes here. -->
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:comp/env/myDataSource</jta-data-source> <!-- This data source must be defined via JNDI in jetty.xml -->
      <class>de.shhcm.model.Event</class> <!--Comment? -->
      <properties>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.format_sql" value="true"/>
        <property name="hbm2ddl.auto" value="update"/>
      </properties>
    </persistence-unit>
</persistence>